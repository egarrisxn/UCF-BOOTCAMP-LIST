{{! Homepage }}

<div class="row">
  <div class="m-2 user-name">
    <h2 class="header-text">Latest Posts.</h2>
  </div>
</div>
<div class="container">
  <div class="row homepage-main">
    {{#each posts as |post|}}
      <div class="row mb-4 project card text-dark shadow">
        <div class="card-header">
          <h3>
            <a href="/post/{{post.id}}">{{post.title}}</a>
          </h3>
          <p>Created by
            {{post.user.name}}
            on
            {{format_date post.date_created}}</p>
        </div>
        <div class="card-body">
          <p>{{post.description}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>