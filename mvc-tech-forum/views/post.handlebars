{{!-- Post Page --}}

<div class="container">
    <div class="row">
        <div class="card text-dark shadow mb-3 post-main">
            <div class="text-center mx-auto p-3">
                <h2>{{title}}</h2>
                <p>Created by {{user.name}} on {{format_date date_created}}</p>
                <p>{{description}}</p>
            </div>

            <div class="text-center">
                <h3>Comments</h3>
                {{#each comments as |comment| }}
                    <div class="post-comments">
                        <p>{{comment.comment_body}}<br/>- {{comment.user.name}} | {{format_date comment.date_created}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

{{> commentForm }}

<script src="/js/newCommentHandler.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/editPost.js"></script>